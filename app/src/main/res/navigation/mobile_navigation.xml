<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_gallery">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.principal.tpo3_dispmoviles.ui.home.HomeFragment"
        android:label="@string/cargar"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.principal.tpo3_dispmoviles.ui.gallery.GalleryFragment"
        android:label="@string/ver"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.principal.tpo3_dispmoviles.ui.slideshow.SlideshowFragment"
        android:label="@string/salir"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/borrarFragment"
        android:name="com.principal.tpo3_dispmoviles.ui.borrar.BorrarFragment"
        android:label="fragment_borrar"
        tools:layout="@layout/fragment_borrar" >
        <action
            android:id="@+id/action_borrarFragment_to_borarBorrarFragment"
            app:destination="@id/borarBorrarFragment" />
    </fragment>
    <fragment
        android:id="@+id/borarBorrarFragment"
        android:name="com.principal.tpo3_dispmoviles.ui.borrar.BorarBorrarFragment"
        android:label="fragment_borar_borrar"
        tools:layout="@layout/fragment_borar_borrar" >
        <action
            android:id="@+id/action_borarBorrarFragment_to_borrarFragment"
            app:destination="@id/borrarFragment" />
    </fragment>
</navigation>